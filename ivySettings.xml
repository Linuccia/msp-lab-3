<ivysettings>
    <settings defaultResolver="chain-example"/>
    <resolvers>
        <chain name="chain-example">
            <filesystem name="libraries">
                <artifact pattern="${ivy.settings.dir}/repository/[artifact]-[revision].[ext]"/>
            </filesystem>
            <ibiblio name="ibiblio" m2compatible="true"/>
        </chain>
    </resolvers>

</ivysettings>